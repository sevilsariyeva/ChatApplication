@using ChatApplication.ViewModels.MessagesViewModels
@model IEnumerable<MessageUsersListViewModel>

<style>

	.users {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.users {
		border: 1px solid #e6e6e6;
		padding: 15px;
		width: 47%;
		margin-bottom: 10px;
	}

	.first-letter {
		width: 100px;
		height: 100px;
		background-color: darkblue;
		border-radius: 50%;
		text-align: center;
		font-size: 60px;
		color: white;
		line-height: 100px;
	}

	.user-info-wrap {
		align-content: center;
	}

	.user-info {
		text-align: center;
	}

	.chat-btn-wrap {
		align-content: center;
		text-align: right;
	}


</style>


<div class="users">
	@foreach(var item in Model)
	{
		<div class="user">
			<div class="row">
				<div class="col-lg-3">
					<div class="first-letter">
						@item.Username.Substring(0,1).ToUpper()
					</div>
				</div>

				<div class="col-lg-6 user-info-wrap">
					<div class="user-info">
						<h3 class="user-name">@item.Username</h3>
						<p class="last-message">@item.LastMessage</p>
					</div>
				</div>

				<div class="col-lg-3 chat-btn-wrap">
					<a class="chat-btn btn btn-secondary" href="/Message/Chat?selectedUserId=@item.Id">Chat</a>
				</div>
			</div>
		</div>
	}
</div>
